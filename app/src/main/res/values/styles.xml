<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="CustomSpinnerStyle">
        <!-- Aplica el drawable con el borde personalizado -->
        <item name="android:background">@drawable/spinner_border</item>
        <!-- Define el color del texto -->
        <item name="android:textColor">@color/baseColor</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/baseColor</item>
        <item name="android:datePickerDialogTheme">@style/CustomDatePicker</item>
    </style>

    <style name="CustomDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/baseColor</item>
        <!-- Removed the private attribute 'android:headerTextColor' -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:calendarTextColor">@color/baseColor</item>
    </style>

    <style name="CustomHourPicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/baseColor</item>
        <item name="android:timePickerDialogTheme">@style/CustomTimePicker</item>
    </style>

    <style name="CustomTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/baseColor</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:timePickerStyle">@style/CustomTimePickerStyle</item>
    </style>

    <style name="CustomTimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="colorPrimary">@color/baseColor</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSurface">@color/baseColor</item>
    </style>

        <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar">
            <item name="android:indeterminateTint">@color/baseColor</item>
            <item name="android:indeterminateTintMode">src_in</item>
        </style>
</resources>